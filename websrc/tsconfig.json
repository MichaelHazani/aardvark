{
	"compilerOptions": 
	{
		"outDir": "./dist/",
		"baseUrl": ".",
		"sourceMap" : true,
		"noImplicitAny": true,
		"module": "es6",
		"target": "es2015",
		"lib": [ "es2019", "dom" ],
		"jsx": "react",
		"allowJs": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"paths" :
		{
			"common/*" : [ "common/*" ],
			"@aardvarkxr/aardvark-shared" : [ "../packages/aardvark-shared/src/index.ts" ],
			"@aardvarkxr/aardvark-react" : [ "../packages/aardvark-react/src/index.ts" ],
			"@aardvarkxr/aardvark-cli" : [ "../packages/aardvark-cli/src/avcmd.ts" ],
			"*" : [ "node_modules/@types/*", "node_modules/*", "*" ]
		},
		"typeRoots": 
		[
			"node_modules/@types",
			"customTypes"
		],
		"moduleResolution" : "node"
	}
}