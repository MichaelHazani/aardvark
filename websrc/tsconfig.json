{
	"compilerOptions": 
	{
		"outDir": "./dist/",
		"baseUrl": ".",
		"sourceMap" : true,
		"noImplicitAny": true,
		"module": "es6",
		"target": "es2015",
		"jsx": "react",
		"allowJs": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"paths" :
		{
			"common/*" : [ "common/*" ],
			"@aardvarkxr/aardvark-shared" : [ "../packages/aardvark-shared/src/index.ts" ],
			"@aardvarkxr/aardvark-react" : [ "../packages/aardvark-react/src/index.ts" ],
			"*" : [ "node_modules/@types/*", "node_modules/*", "*" ]
		},
		"moduleResolution" : "node"
	}
}